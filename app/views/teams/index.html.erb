<% content_for :title do %>FTC Team search<% end %>
<% content_for :description do %>Search for FTC Teams around the US<% end %>
<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<%= form_tag(teams_path(""), method: "get") do %>
  <p>
    <%= label_tag(:search, "Search Team name or ID:") %>
    <%= text_field_tag(:search,params[:search]) %>
    <%= submit_tag("Search") %>
  </p>
<% end %>

<table class="pure-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Teamid</th>
      <th>Location</th>
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
      <td><%= link_to team.name, team %></td>
        <td><%= team.id %></td>
        <td><%= team.location %></td>
      </tr>
    <% end %>
    <%= will_paginate @teams %>
  </tbody>
</table>

<br>
